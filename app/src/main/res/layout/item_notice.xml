<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notice_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notice_profile_imageview"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/ic_account_circle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginVertical="15dp"
        android:layout_toEndOf="@+id/notice_profile_imageview"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notice_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/apple_gothic_neo_b"
                android:text="@string/unknown"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/notice_content_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/notice_name_textview"
                android:fontFamily="@font/apple_gothic_neo_r"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/notice_comment_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/apple_gothic_neo_r"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/notice_timeago_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/apple_gothic_neo_r"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="5dp">
        <ImageView
            android:id="@+id/notice_content_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>