<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/box_rounded_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btn_popup_report"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:fontFamily="@font/apple_gothic_neo_b"
        android:gravity="center"
        android:text="@string/popup_report_check"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_popup_report">

        <TextView
            android:id="@+id/btn_report_check_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/apple_gothic_neo_b"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <LinearLayout
            android:id="@+id/btn_popup_division"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="7dp"
            android:background="@color/colorDivision"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/btn_report_check_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/apple_gothic_neo_b"
            android:text="@string/check"
            android:textColor="@color/red"
            android:textSize="16dp"/>

    </LinearLayout>


</RelativeLayout>