<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/box_rounded_white">

    <TextView
        android:id="@+id/btn_popup_delete"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:fontFamily="@font/apple_gothic_neo_b"
        android:gravity="center"
        android:text="@string/popup_delete"
        android:textColor="@color/google_red"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/btn_popup_modify"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_popup_delete"
        android:fontFamily="@font/apple_gothic_neo_b"
        android:gravity="center"
        android:text="@string/popup_modify"
        android:textColor="@color/black"
        android:textSize="15sp" />

</RelativeLayout>