<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/box_rounded_chatbot">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_chat_bot_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="160dp"
        android:layout_margin="25dp"
        android:elevation="60dp">
        <ImageView
            android:id="@+id/imageview_chat_bot_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textview_chat_bot_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/card_view_chat_bot_profile"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:fontFamily="@font/font_bold"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textview_chat_bot_category"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/textview_chat_bot_profile"
        android:background="@drawable/box_rounded"
        android:fontFamily="@font/font_bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textview_chat_bot_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_chat_bot_profile"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/card_view_chat_bot_profile"
        android:fontFamily="@font/font_bold"
        android:textSize="15dp" />

</RelativeLayout>