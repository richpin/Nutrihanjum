<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsitem_layout"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/newsitem_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newsitem_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/apple_gothic_neo_b"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/newitem_explain_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/apple_gothic_neo_r"
            android:textColor="@color/gray"
            android:textSize="11dp"
            android:text="미쳐가는 세상속에서 나만이 종말을 맞기에는 너무 억울한 나이가 되었다."
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/newsitem_website_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/apple_gothic_neo_r"
            android:textColor="@color/gray"
            android:textSize="11dp" />

    </LinearLayout>

</LinearLayout>